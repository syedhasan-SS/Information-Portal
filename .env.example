# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/information_portal

# Server Configuration
PORT=5000
NODE_ENV=development

# Application URL (used in emails and links)
APP_URL=http://localhost:5000

# Email Configuration (Optional)
# Leave empty for development (emails will be logged to console)
# For production, configure with your SMTP provider
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="FLOW Support" <noreply@example.com>

# BigQuery Configuration (Optional)
# For fetching Fleek order data from BigQuery
BIGQUERY_PROJECT_ID=your-gcp-project-id
BIGQUERY_DATASET=fleek_hub
BIGQUERY_ORDERS_TABLE=order_line_details
BIGQUERY_LOCATION=US
BIGQUERY_CREDENTIALS_PATH=/path/to/service-account-key.json
# OR use inline JSON credentials (recommended for Vercel):
# BIGQUERY_CREDENTIALS_JSON={"type":"service_account","project_id":"...","private_key":"..."}
